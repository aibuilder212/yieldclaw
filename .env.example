# YieldClaw Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit your .env file to Git

# ================================
# xAI / Grok API
# ================================
XAI_API_KEY=your_xai_api_key_here
XAI_MODEL=grok-4-1-fast

# ================================
# Telegram Bot
# ================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ================================
# Raydium API
# ================================
RAYDIUM_API_BASE=https://api.raydium.io/v3
SCAN_INTERVAL_MINUTES=4
MIN_APY_THRESHOLD=5
MIN_TVL_USD=10000
IL_WARNING_THRESHOLD=3

# ================================
# Agent Log (Railway)
# ================================
AGENT_LOG_URL=https://your-app.railway.app/log
AGENT_LOG_ENABLED=true

# ================================
# Optional: WhatsApp (Phase 2)
# ================================
# WHATSAPP_TOKEN=
# WHATSAPP_PHONE_ID=
# WHATSAPP_RECIPIENT=
